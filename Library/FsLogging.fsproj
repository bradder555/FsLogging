<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <ServerGarbageCollection>true</ServerGarbageCollection>
    <ConcurrentGarbageCollection>true</ConcurrentGarbageCollection>
    <VersionPrefix>"$(version)"</VersionPrefix>
    <authors>Brad</authors>
    <owners>Brad</owners>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <description>An opinionated implementation of logging</description>
    <PackageProjectUrl>https://github.com/bradder555/FsLogging</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="FsLoggingTypes.fs" />
    <Compile Include="FsLogging.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FsTime" Version="1.0.4" />
    <PackageReference Include="hopac" Version="0.4.1" />
    <PackageReference Include="system.io" Version="4.3.0" />
    <PackageReference Include="system.io.ports" Version="4.5.0" />
    <PackageReference Include="system.net.sockets" Version="4.3.0" />
  </ItemGroup>

</Project>
